{% extends 'base.html.twig' %}

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/home.css') }}">
    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('javascript/load-more-trick.js') }}"></script>
    {% endblock %}

{% block body %}

    <header>
        <div class="d-flex justify-content-center align-items-center">
            <h1>SnowTrick</h1>
        </div>
    </header>

    <section>
        <div class="p-5 d-flex justify-content-center flex-wrap" id="tricks-presentation" data-all-tricks="{{ totalTricks }}">
            {% include 'home/_trick-cards.html.twig' %}
        </div>

        <div class="d-flex justify-content-center mb-5">
            <button type="button" id="load-more" class="btn btn-success">Load More</button>
        </div>
    </section>



{% endblock %}
