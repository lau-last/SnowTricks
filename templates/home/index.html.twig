{% extends 'base.html.twig' %}

    {% block stylesheets %}
        <link rel="stylesheet" href="styles/home.css">
    {% endblock %}

{% block body %}

    <header>
        <div class="d-flex justify-content-center align-items-center">
            <h1>SnowTrick</h1>
            <a href="#tricks-presentation"><i class="bi bi-arrow-down-circle-fill fs-1"></i></a>
        </div>
    </header>

    <section class="">
        <div class="p-5 d-flex justify-content-center flex-wrap" id="tricks-presentation">

            {% for trick in tricks %}
                <div class="trick-card-container m-4">
                    <div class="card trick-card" style="width: 18rem;">
                        <img src="images/uploads/tricks/{{ trick.pictures|first.fileName }}.jpg" class="card-img-top"
                             alt="{{ trick.pictures|first.alt }}">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title">{{ trick.name }}</h5>
                                {% if app.user %}
                                    <div>
                                        <i class="bi bi-pen mx-3"></i>
                                        <i class="bi bi-trash mx-3"></i>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
        <div class="d-flex justify-content-center">
            <a href="" class="btn btn-success">Load More</a>
        </div>
    </section>

{% endblock %}
