{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
 {% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('styles/trick-creation.css') }}">
 {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('javascript/add-media-fields.js') }}"></script>

    {% endblock %}
{% block body %}
    <h1 class="text-center my-5">trick creation</h1>
    <div class="mx-auto" style="width: 30%">
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.category) }}
        {{ form_row(form.description) }}
        <div id="picture" data-prototype="{{ form_row(form.pictures.vars.prototype)|e('html_attr') }}">
            <span id="pictures-span"></span>
        </div>
        <div id="video" data-prototype="{{ form_row(form.videos.vars.prototype)|e('html_attr') }}">
            <span></span>
        </div>
        {{ form_row(form.videos) }}
        {{ form_end(form) }}
    </div>
{% endblock %}